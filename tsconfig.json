{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitHelpers": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "skipLibCheck": true,
    "jsxFactory": "render"
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src", "e2e", "jest.config.js"]
}
