{
    "name": "st-query",
    "version": "0.0.1",
    "publishConfig": {
        "access": "public"
    },
    "homepage": "https://github.com/springtype-org/st-query",
    "repository": {
        "url": "git+https://github.com/springtype-org/st-query.git",
        "type": "git"
    },
    "bugs": {
        "url": "https://github.com/springtype-org/st-query/issues"
    },
    "description": "DOM mutation API that feels like the good old jQuery",
    "keywords": [
        "DOM API",
        "jQuery",
        "microframework",
        "TypeScript",
        "zero-dependency",
        "fast",
        "DOM"
    ],
    "scripts": {
        "clean": "npx st-rm-rf dist",
        "prebuild": "yarn clean && tsc -p tsconfig.dist.json",
        "build": "webpack",
        "postbuild": "npx st-cp package.json .npmignore README.md LICENSE dist",
        "pree2e": "ts-node ./scripts/e2e-build-all.ts",
        "e2e": "testcafe chrome:headless e2e/**/__e2e__/*",
        "test": "jest --verbose --watch",
        "test:ci": "jest --verbose --runInBand",
        "coverage": "jest --verbose --coverage",
        "coverage:ci": "jest --verbose --coverage --runInBand",
        "prerelease": "yarn build",
        "release": "cd dist && yarn publish",
        "measure": "gzip dist/index.js && ls -lah dist/index.js.gz && rm dist/index.js.gz"
    },
    "author": "Aron Homberg <info@aron-homberg.de>",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.7.5",
        "@babel/core": "^7.7.5",
        "@babel/node": "^7.7.4",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/plugin-proposal-decorators": "^7.7.4",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
        "@babel/plugin-proposal-optional-chaining": "^7.7.5",
        "@babel/plugin-syntax-dynamic-import": "^7.7.4",
        "@babel/plugin-transform-runtime": "^7.10.5",
        "@babel/polyfill": "^7.7.0",
        "@babel/preset-env": "^7.7.6",
        "@babel/preset-typescript": "^7.12.7",
        "@types/jest": "^25.2.1",
        "@types/node": "^13.13.2",
        "babel-loader": "^8.0.6",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "terser-webpack-plugin": "^5.1.1",
        "testcafe": "^1.10.1",
        "ts-jest": "^26.5.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "webpack": "^5.19.0",
        "webpack-bundle-analyzer": "^4.4.0",
        "webpack-cli": "^4.4.0"
    }
}
